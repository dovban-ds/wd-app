{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "strict": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src",
    "paths": {
      "@screens/*": ["screens/*"],
      "@screens": ["screens/index"],
      "@hooks": ["hooks/*"],
      "@api/*": ["api/*"]
    }
  }
}
